@using EntityLayer.Concrete
@model List<Reference>


<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Referanslar</h2>
        </div>
        <div class="row">
            @foreach(var i in Model)
            {
                <div class="col-md-12 mb-5" data-aos="fade-right" data-aos-delay="100">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@i.Comment</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2"> <br/>
                            <div class="fw-bolder">@i.Name</div>
                            <div class="text-small">@i.Company</div>
                        </div><img class="me-md-3 rounded" src="@i.ImageUrl" width="96" height="96" alt="client 1" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>