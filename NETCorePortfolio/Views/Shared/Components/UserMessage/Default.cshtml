@using EntityLayer.Concrete
@model List<UserMessage>

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Kullanıcı Mesajları</h4>
                <p class="text-muted mb-1 small">Tümünü görüntüle</p>
            </div>
            <div class="preview-list">
                @foreach(var i in Model)
                {
                    <div class="preview-item border-bottom">
                        <div class="preview-thumbnail">
                            <img src="@i.User.ImageUrl" alt="image" class="rounded-circle" />
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@i.User.Name</h6>
                                    <span class="badge badge-outline-@(i.Status ? "success" : "danger") mb-3">@((i.Status ? "Okunmadı" : "Okundu"))</span>
                                </div>
                                    <p class="text-muted">@i.Content</p>
                                    <span class="text-muted text-small">@i.Date</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>