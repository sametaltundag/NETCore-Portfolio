@model NETCorePortfolio.Areas.Writer.Models.UserRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kayıt Formu</title>
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <h4>Yeni misin?</h4>
                            <h6 class="font-weight-light">Kayıt olmak çok kolay! Formu doldur aramıza katıl!</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" placeholder="Adınız" name="Name">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" placeholder="Soyadınız" name="Surname">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adınız" name="UserName">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input type="email" class="form-control form-control-lg" placeholder="E-Posta" name="Email" >
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" placeholder="Görsel URL" name="ImageUrl">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifre" name="Password">
                                    <span class="text-secondary">Büyük harf, küçük harf, rakam ve özel karakter zorunludur..</span>
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifre Tekrar" name="ConfirmPassword">
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabın var mı? <a href="/Writer/Login/" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>